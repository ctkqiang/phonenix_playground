<h1>Show Post</h1>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>

</ul>

<span class="btn btn-light"><%= link "Edit", to: Routes.post_path(@conn, :edit, @post) %></span>
<span class="btn btn-light"><%= link "Back", to: Routes.post_path(@conn, :index) %></span>
